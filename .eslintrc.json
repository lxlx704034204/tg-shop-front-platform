{
    "extends": "standard",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": [ "html", "standard" ],
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "quotes": 1,
        "semi": 1,
        "no-console": ["error"],
        "no-empty": 0,
        "no-eq-null": 0,
        "no-new": 0,
        "no-fallthrough": 0,
        "no-unreachable": 0,
        "indent": 0,
        "no-console": 0,
        "key-spacing": 0,
        "comma-spacing": 0,
        "no-trailing-spaces": 0,
        "arrow-spacing": 0,
        "keyword-spacing": 0,
        "space-before-blocks": 0,
        "padded-blocks": 0,
        "space-infix-ops": 0,
        "eqeqeq":0,
        "no-empty-function": 0,
        "no-multi-spaces": 1,
        "space-before-function-paren": 0,
        "no-unused-vars": 1
    }
}
